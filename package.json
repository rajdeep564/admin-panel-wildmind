{
  "name": "wildmind-admin-panel",
  "version": "1.0.0",
  "description": "WildMind AI Admin Panel - Monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:frontend": "npm run dev --workspace=@wildmind-admin/frontend",
    "dev:backend": "npm run dev --workspace=@wildmind-admin/backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=@wildmind-admin/frontend",
    "build:backend": "npm run build --workspace=@wildmind-admin/backend",
    "build:netlify": "npm run build:frontend && npm run build:backend",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "install:all": "npm install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
